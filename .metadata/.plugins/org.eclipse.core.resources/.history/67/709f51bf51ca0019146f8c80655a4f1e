<% 
 String todoItem = request.getParameter("todoItem");
 if(todoItem != null){
 ArrayList<String> items = (ArrayList<String>)session.getAttribute("todoItem");
 items.add(todoItem);
 session.setAttribute("todoItem", items);
 }
%>

